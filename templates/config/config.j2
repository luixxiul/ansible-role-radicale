# {{ ansible_managed }}

[server]
hosts = 0.0.0.0:5232
max_connections = 1000
timeout = 60

[auth]
type = {{ radicale_auth_type }}
htpasswd_filename = /config/htpasswd
matrix_server = {{ radicale_auth_matrix_server }}
realm = protected

[storage]
filesystem_folder = /data/collections

[logging]
level = warning
mask_passwords = True
